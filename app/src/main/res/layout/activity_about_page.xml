<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/back_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fillViewport="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="10dp"
                android:autoSizeTextType="uniform"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/support_title"
                android:layout_width="65dp"
                android:layout_height="22dp"
                android:text="Support:"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/support_text"
                app:layout_constraintTop_toTopOf="@id/support_text"/>

            <TextView
                android:id="@+id/support_text"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:autoLink="email"
                android:linksClickable="true"
                android:text="Please email any problems, bugs, or suggestions here: osleventsapp@augustana.edu. Thanks!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/textView1"
                app:layout_constraintTop_toBottomOf="@id/textView1"
                android:layout_marginRight="16dp" />

            <TextView
                android:id="@+id/purpose_title"
                android:layout_width="65dp"
                android:layout_height="22dp"
                android:text="Purpose:"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/purpose_text"
                app:layout_constraintTop_toTopOf="@+id/purpose_text" />

            <TextView
                android:id="@+id/purpose_text"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:text="To provide an easy way for students to track and attend events held on campus by different student organizations."
                app:layout_constraintStart_toStartOf="@+id/support_text"
                app:layout_constraintTop_toBottomOf="@+id/support_text" />

            <TextView
                android:id="@+id/phone_title"
                android:layout_width="65dp"
                android:layout_height="22dp"
                android:text="Phone:"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/phone_text"
                app:layout_constraintTop_toTopOf="@+id/phone_text" />

            <TextView
                android:id="@+id/phone_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_marginTop="20dp"
                android:text="309-794-2695"
                app:layout_constraintStart_toStartOf="@+id/purpose_text"
                app:layout_constraintTop_toBottomOf="@+id/purpose_text" />

            <TextView
                android:id="@+id/devTeam_title"
                android:layout_width="65dp"
                android:layout_height="50dp"
                android:text="Dev\nTeam:"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/devTeam_text"
                app:layout_constraintTop_toTopOf="@+id/devTeam_text" />

            <TextView
                android:id="@+id/devTeam_text"
                android:layout_width="0dp"
                android:layout_height="140dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="16dp"
                android:text="Kyle Workman, Jared Haeme, Brandon Thompson, Jack Cannell, Brent Pierce, Paige Oucheriah, Michael Wardach\n\n(Made by Augustana students for Augustana students)\n\nAdvised by Dr. Stonedahl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/phone_text"
                app:layout_constraintTop_toBottomOf="@id/phone_text"
                android:layout_marginRight="16dp" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@+id/back_btn"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="#CCCCCC"
        android:text="Return"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>

