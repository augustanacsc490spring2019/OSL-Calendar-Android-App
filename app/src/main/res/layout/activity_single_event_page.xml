    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="75dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:text="Location:"
    android:layout_alignBaseline="@id/txt_location"
    android:textStyle="bold"
    android:textSize="18dp"/>
        <TextView
            android:id="@+id/lbl_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lbl_location"
            android:text="Date:"
            android:layout_alignBaseline="@id/txt_date"
            android:textStyle="bold"
            android:layout_below="@id/txt_location"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/lbl_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lbl_location"
            android:layout_alignBaseline="@id/txt_time"
            android:text="Time:"
            android:textStyle="bold"
            android:layout_below="@id/txt_date"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/lbl_org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lbl_location"
            android:layout_alignBaseline="@id/txt_organization"
            android:text="Organization:"
            android:textStyle="bold"
            android:layout_below="@id/txt_time"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/lbl_Descrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/lbl_location"
            android:layout_alignBaseline="@id/txt_description"
            android:text="Description:"
            android:textStyle="bold"
            android:layout_below="@id/txt_organization"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/txt_location"
