        </activity>
        <activity android:name="edu.augustana.osleventsandroid.ForceUpdateActivity"
            android:label="OSL Events">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
